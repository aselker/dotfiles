#!/usr/bin/env bash

network_name="aws-UDP4-443-config"

result=$(nmcli -f GENERAL.STATE c show $network_name | grep "activated")


if [ "$1" = "u" ] || [ "$1" = "up" ] || [ "$1" = "on" ]
	then
		nmcli connection up $network_name
	else
		if [ "$1" = "d" ] || [ "$1" = "dn" ] || [ "$1" = "down" ] || [ "$1" = "off" ]
			then
				nmcli connection down $network_name
			else
				if [ -n "$result" ]
					then
						nmcli connection down $network_name
					else
						nmcli connection up $network_name
				fi
		fi
fi

